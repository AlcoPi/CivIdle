{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "Watch and compile TypeScript",
         "type": "shell",
         "command": "npx tsc",
         "isBackground": true,
         "args": [
            "--build",
            "--incremental",
            "--watch",
            "tsconfig.json"
         ],
         "presentation": {
            "reveal": "never",
            "echo": false,
            "focus": false,
            "panel": "dedicated"
         },
         "runOptions": {
            "runOn": "folderOpen"
         },
         "problemMatcher": "$tsc-watch"
      },
      {
         "label": "Run Dev Server",
         "type": "shell",
         "command": "pnpm run dev",
         "isBackground": true,
         "presentation": {
            "reveal": "never",
            "echo": false,
            "focus": false,
            "panel": "dedicated"
         },
         "runOptions": {
            "runOn": "folderOpen"
         },
         "problemMatcher": []
      }
   ]
}